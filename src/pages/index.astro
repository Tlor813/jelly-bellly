---
// Layouts
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../layouts/Header.Header.astro'


// Import Stylesheet
import '../styles/global.css';


// data source
// replace temporary JSON placeholder API
const source = 'https://assets.codepen.io/16425/jelly-belly-beans.json';
// fetch the data
const res = await fetch(source); 
// store retreived data
const jellyBeans = await res.json();
---
<BaseLayout>

		
		<header class="masthead">
			<h1 class="site-title">Jelly Belly</h1>
		</header>

		<main id="content" class="wrapper">

			<ul class="grid">
		  
				<!-- Your API Data -->
				{
					jellyBeans.map( bean =>
					<li style= {`background: ${bean.backgroundColor}` }>

						<h3>{bean.flavorName}</h3>
						
						<img src= {bean.imageUrl}/>

						<p>{bean.description} </p>


					</li> 
					)
				}
		  
			</ul>
		  </main>
		  


		</BaseLayout>